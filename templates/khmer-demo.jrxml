<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd" name="khmer-demo" pageWidth="595" pageHeight="842" columnWidth="555" leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20" whenNoDataType="AllSectionsNoDetail">
    
    <!-- Property to ignore missing fonts gracefully -->
    <property name="net.sf.jasperreports.awt.ignore.missing.font" value="true"/>
    
    <!-- 
    IMPORTANT: This template requires a Khmer font to be registered.
    
    The default "Hanuman" font from Google Fonts is a variable font and may not work.
    
    SOLUTION: Upload a static Khmer font like Khmer OS:
    curl -X POST http://localhost:8080/api/fonts/register \
      -F "name=Khmer OS" \
      -F "normal=@KhmerOS.ttf"
    
    Then change fontName="Hanuman" to fontName="Khmer OS" in this template.
    
    See KHMER_FONTS_TROUBLESHOOTING.md for detailed instructions.
    -->
    
    <!-- Parameters -->
    <parameter name="title" class="java.lang.String"/>
    <parameter name="subtitle" class="java.lang.String"/>
    <parameter name="content" class="java.lang.String"/>
    <parameter name="footer" class="java.lang.String"/>
    
    <!-- Title Section with Khmer Font -->
    <title>
        <band height="120">
            <!-- Main Title in Khmer -->
            <textField isBlankWhenNull="true">
                <reportElement x="0" y="20" width="555" height="40"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="Hanuman" size="28"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{title}]]></textFieldExpression>
            </textField>
            
            <!-- Subtitle in Khmer -->
            <textField isBlankWhenNull="true">
                <reportElement x="0" y="70" width="555" height="25"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="Hanuman" size="16"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{subtitle}]]></textFieldExpression>
            </textField>
            
            <!-- Decorative Line -->
            <line>
                <reportElement x="100" y="105" width="355" height="1"/>
                <graphicElement>
                    <pen lineWidth="2.0" lineStyle="Solid" lineColor="#0066CC"/>
                </graphicElement>
            </line>
        </band>
    </title>
    
    <!-- Page Header -->
    <pageHeader>
        <band height="35">
            <staticText>
                <reportElement x="0" y="10" width="555" height="20"/>
                <textElement textAlignment="Center">
                    <font fontName="Kh Content" size="10"/>
                </textElement>
                <text><![CDATA[របាយការណ៍ជាមួយពុម្ពអក្សរខ្មែរ (Report with Khmer Font)]]></text>
            </staticText>
        </band>
    </pageHeader>
    
    <!-- Detail Section with Content -->
    <detail>
        <band height="250">
            <!-- Content Box -->
            <rectangle>
                <reportElement x="20" y="10" width="515" height="220" forecolor="#0066CC" backcolor="#F0F8FF"/>
                <graphicElement>
                    <pen lineWidth="1.0"/>
                </graphicElement>
            </rectangle>
            
            <!-- Main Content in Khmer -->
            <textField isBlankWhenNull="true">
                <reportElement x="40" y="30" width="475" height="180"/>
                <textElement textAlignment="Justified">
                    <font fontName="Hanuman" size="14"/>
                    <paragraph lineSpacing="1_1_2"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{content}]]></textFieldExpression>
            </textField>
        </band>
    </detail>
    
    <!-- Page Footer -->
    <pageFooter>
        <band height="60">
            <!-- Footer Text -->
            <textField isBlankWhenNull="true">
                <reportElement x="30" y="10" width="495" height="20"/>
                <textElement textAlignment="Center">
                    <font fontName="Hanuman" size="11"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{footer}]]></textFieldExpression>
            </textField>
            
            <!-- Page Number -->
            <textField>
                <reportElement x="400" y="35" width="125" height="20"/>
                <textElement textAlignment="Right">
                    <font fontName="Kh Content" size="10"/>
                </textElement>
                <textFieldExpression><![CDATA["ទំព័រ " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
            
            <!-- Date -->
            <textField pattern="dd MMMM yyyy">
                <reportElement x="30" y="35" width="200" height="20"/>
                <textElement>
                    <font fontName="Hanuman" size="9"/>
                </textElement>
                <textFieldExpression><![CDATA[new java.util.Date()]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>
</jasperReport>
